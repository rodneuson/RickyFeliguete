@model RickyFeliguete.Models.AccountModels.AvailableUser

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    
    <div class="form-horizontal">

        <div class="form-group">
            <label>User Name</label>
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nome" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Password</label>
            @Html.PasswordFor(model => model.UserPassword, new { @class = "form-control " })
            @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <br />
    <p>
        @Html.ActionLink("New user? Sign up here!", "Create", "AvailableUsers")
    </p>
    <style type="text/css">
        .input-validation-error{
            background-color:darksalmon;
        }
    </style>
}
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}